<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RepoAuthActivity"
    android:background="#FFFFFF">

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/ic_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.04"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/bbtree_b"
        android:text="Repository 권한 설정"
        android:textColor="@color/colorTextDark"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/backButton" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bbtree_r"
        android:gravity="center"
        android:layout_marginTop="12dp"
        android:text="GitCat에서 커믹 내역을 수집하기 위해\n
접근할 GitHub Repository의 범위를 설정해주세요!"
        android:textColor="@color/colorTextDark"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/bbtree_r"
        android:text="(범위 설정은 추후 설정 메뉴에서 변경 가능합니다)"
        android:textColor="@color/colorLightGrey"
        android:textSize="11sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView13" />

    <RadioGroup
        android:id="@+id/repo_radio"
        android:layout_width="270dp"
        android:layout_height="250dp"
        android:layout_marginTop="19dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.553"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12"
        android:gravity="center">

        <RadioButton
            android:id="@+id/public_radio"
            android:layout_width="270dp"
            android:layout_height="100dp"
            android:text="Public Repository만 반영하기\n\nGitHub 계정에 public으로 공개된\n
repository만 반영합니다"
            android:button="@android:color/background_light"
            android:textAlignment="center"
            android:background="@drawable/info_list"
            android:fontFamily="@font/bbtree_r"
            android:textColor="@color/colorTextDark"/>

        <RadioButton
            android:id="@+id/private_radio"
            android:layout_width="270dp"
            android:layout_height="100dp"
            android:text="Private Repository도 반영하기\n\nGitHub 계정의 모든\n
repository를 반영합니다."
            android:button="@android:color/background_light"
            android:textAlignment="center"
            android:background="@drawable/info_list"
            android:fontFamily="@font/bbtree_r"
            android:textColor="@color/colorTextDark"
            android:layout_marginTop="15dp"/>

    </RadioGroup>

    <TextView
        android:id="@+id/repo_ex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="12sp"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:fontFamily="@font/bbtree_b"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/repo_radio" />

    <Button
        android:id="@+id/buttonGo"
        android:layout_width="136dp"
        android:layout_height="32dp"
        android:background="@drawable/info_next"
        android:enabled="false"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/bbtree_b"
        android:text="설정 완료"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/repo_ex"
        app:layout_constraintVertical_chainStyle="packed" />
</androidx.constraintlayout.widget.ConstraintLayout>