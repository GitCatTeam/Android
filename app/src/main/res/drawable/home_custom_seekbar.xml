<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">    <!--선 : 길이6dp -->
            <corners
                android:radius="9dp" />
            <stroke android:width="6dp" android:color="@color/colorseekbar" />
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <clip android:drawable="@color/colorPrimaryDark">
            <shape>
                <corners
                    android:radius="9dp" />
                <gradient
                    android:startColor="#e6f5ff"
                    android:endColor="@color/colorPrimaryDark"
                    android:angle="0"
                    android:type="linear"
                    android:useLevel="false"
                    />
            </shape>
        </clip>
    </item>

</layer-list>