<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_new_cat"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingVertical="3dp">

    <ImageView
        android:id="@+id/img_new_cat"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img_cat_quest_02" />

    <TextView
        android:id="@+id/txt_new_cat_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="새로운 고양이 설명\n"
        android:textSize="14sp"
        android:textColor="@color/colorTextDark"
        android:fontFamily="@font/bbtree_r"
        android:layout_marginLeft="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/img_new_cat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_new_cat"
        app:layout_constraintTop_toTopOf="@+id/img_new_cat" />
</androidx.constraintlayout.widget.ConstraintLayout>