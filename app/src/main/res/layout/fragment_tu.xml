<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TuFragment"
    android:background="@drawable/info_list"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="185dp"
            android:background="@drawable/tu_img_top">

            <ImageView
                android:id="@+id/tu_image"
                android:layout_width="325dp"
                android:layout_height="185dp"
                android:padding="10dp"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/tu_num"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/tu_circle"
            android:layout_gravity="center"
            android:text="01"
            android:fontFamily="@font/bbtree_b"
            android:paddingTop="5dp"
            android:textSize="18sp"
            android:lineHeight="15sp"
            android:textColor="@color/colorPrimaryDark"
            android:textAlignment="center"
            android:layout_marginBottom="19dp"
            android:layout_marginTop="13dp"/>

        <TextView
            android:id="@+id/tu_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/colorTextDark"
            android:fontFamily="@font/bbtree_b"
            android:textAlignment="center"
            android:layout_marginBottom="14dp"/>

        <TextView
            android:id="@+id/tu_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#8acbf6"
            android:fontFamily="@font/bbtree_r"
            android:textSize="14sp"
            android:textAlignment="center"/>

        <Button
            android:id="@+id/tu_btn"
            android:layout_width="235dp"
            android:layout_height="34dp"
            android:text="@string/tu_fourth_button"
            android:textAllCaps="false"
            android:layout_gravity="center"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/bbtree_b"
            android:background="@drawable/info_next_after"
            android:visibility="gone"/>

    </LinearLayout>
</FrameLayout>