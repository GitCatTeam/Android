<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".LeaveCatFragment"
    android:background="@drawable/info_list">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_leave_cat_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/bbtree_b"
            android:text="[속보] 고양씨 떠나다..."
            android:textColor="@color/colorTextDark"
            android:textSize="20sp"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_btn_leave_cat_close" />

        <ImageView
            android:id="@+id/img_btn_leave_cat_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_modulex"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/img_leave_cat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:src="@drawable/img_cat_byebye"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_leave_cat_title" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="40sp"
            android:paddingBottom="20dp"
            android:layout_marginTop="5dp"
            app:layout_constraintEnd_toEndOf="@+id/img_leave_cat"
            app:layout_constraintStart_toStartOf="@+id/img_leave_cat"
            app:layout_constraintTop_toBottomOf="@+id/img_leave_cat">

            <TextView
                android:id="@+id/txt_leave_cat_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bbtree_b"
                android:text=""
                android:textColor="@color/colorTextDark"
                android:textSize="14sp"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintBottom_toBottomOf="@+id/txt_leave_cat_content2"
                app:layout_constraintEnd_toStartOf="@+id/txt_leave_cat_content2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/txt_leave_cat_content2" />

            <TextView
                android:id="@+id/txt_leave_cat_content1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bbtree_r"
                android:text="저런!"
                android:textColor="@color/colorTextDark"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_leave_cat_content2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bbtree_r"
                android:text="씨가 떠나고 말았어요."
                android:textColor="@color/colorTextDark"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/txt_leave_cat_nickname"
                app:layout_constraintTop_toBottomOf="@+id/txt_leave_cat_content1" />

            <TextView
                android:id="@+id/txt_leave_cat_content3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bbtree_r"
                android:text="앞으로 다른 고양씨들도"
                android:textColor="@color/colorTextDark"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_leave_cat_content2" />

            <TextView
                android:id="@+id/txt_leave_cat_content4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bbtree_r"
                android:text="떠나보내지 않으려면\n조금 더 꾸준한 커밋이 필요해요."
                android:textColor="@color/colorTextDark"
                android:textSize="14sp"
                android:gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_leave_cat_content3" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>