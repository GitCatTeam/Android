<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- 평상시 -->
    <item android:state_focused="false" android:state_checked="false" android:color="@color/colorText">
        <shape android:shape="oval">
            <stroke android:color="@color/colorText" android:width="1dp"/>
            <solid android:color="#FFFFFF"/>
            <size android:width="80dp" android:height="80dp"/>
        </shape>
    </item>

    <!-- 클릭했을 때 -->
    <item android:state_focused="false" android:state_checked="true" android:color="@color/colorPrimaryDark">
        <shape android:shape="oval">
            <stroke android:color="@color/colorPrimaryDark" android:width="1dp" />
            <solid android:color="#FFFFFF"/>
            <size android:width="80dp" android:height="80dp"/>
        </shape>
    </item>
</selector>